         "parameters": [
           {
                    "name": "username",
                    "in": "formData",
                    "description": "The username of the user",
                    "required": true,
                    "type": "string"
                },
           {
                    "name": "password",
                    "in": "formData",
                    "description": "The password of the user",
                    "required": true,
                    "type": "string"
           }
         ],
         "responses": {
           "200": {
             "description": "Sucessful operation, returns value based on result",
            "schema": {
              "description": "BaseResponse model",
              "example": {
                    "description": "",
                    "status": "Sucess",
                    "user": {
                        "email": "test2@test.sk",
                        "groups": "\"\"",
                        "id": 1,
                        "phone": "788",
                        "photo": "\"/path\"",
                        "twoF_enabled": false,
